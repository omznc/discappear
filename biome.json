{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUndeclaredDependencies": "off"
			},
			"a11y": {
				"useKeyWithMouseEvents": "off",
				"useKeyWithClickEvents": "off"
			},
			"style": {
				"noDefaultExport": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": ["**/node_modules/**", "**/dist/**", "**/build/**", "**/.next/**", "**/src/components/ui/**"]
	}
}
